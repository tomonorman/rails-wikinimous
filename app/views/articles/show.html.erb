<div class="container">
  <h2><%= @article.title  %></h2>
  <hr>
  <p><%= @article.content %></p>
  <div class="d-flex">
    <%= link_to articles_path do %>
      <h3 class="mr-2"><i class="fas fa-hat-cowboy-side"></i></h3>
    <% end %>
    <%= link_to edit_article_path do %>
      <h3 class="mr-2"><i class="far fa-credit-card"></i></h3>
    <% end %>
    <%= link_to article_path, method: :delete, data: { confirm: "Are you sure you want to delete this article?" } do %>
      <h3><i class="fas fa-eraser"></i></h3>
    <% end %>
  </div>
</div>
